        <!-- Page content -->
		<main>
          <h1>Contact Us</h1>
		  <p>if you have any questions, suggestions, or want to get involved, feel free to reach out to us through the form below:</p>
		  <form method="get" action="thankyou.html">
            <label for="username" >
             Fullname:
             <input type="text" id="fullname" autofocus required>
            </label>
			<br>
			<br>
			<label for="email" >
             Email:
             <input type="text" id="email" autofocus required >
            </label>
			 <br>
			 <br>
			<label for="crust">
             Topic of inquiry:
             <select id="inquiry" >
              <option value="general">General Inquiry</option>
              <option value="volunteering">Volunteering Opportunities</option>
             <option value="partnerships">Partnerships and Collaboration</option>
			 <option value="other">Other</option>
            </select>
            </label>
			<br>
			<br>
			<label for="comments">
              Message:
             <textarea id="comments" required>
			 
             </textarea>
           </label>
		   <br>
		   <br>
		   <fieldset>
		     <legend>Preferred Contact Method:</legend>
            <input type="radio" name="method" id="email" value="thin" checked>
            <label for="email">Email</label>
            <br>
            <input type="radio" name="method" id="phone" value="deep">
            <label for="phone">Phone</label>
            <br>
            <input type="radio" name="method" id="mail" value="hand">
            <label for="mail">Mail</label>
		   </fieldset>
		   <br>
		   <p>
		    <input type="submit" id="submitform" value="Send Messsage"  >
		    <input type="reset" id="submitform" value="Clear Form" action=reset >
			</p>								 
          </form>
		</main>
